
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "author", FormMethod.Post))
{
    <table>
        <tr>
            <td>Firstname:</td>
            <td><input type="text" name="FirstName" /></td>
        </tr>
        <tr>
            <td>Lastname:</td>
            <td><input type="text" name="LastName" /></td>
        </tr>
        <tr>
            <td>Birth year:</td>
            <td><input type="number" name="BirthYear" /></td>
        </tr>
    </table>

    <br />
    <input type="submit" value="Create new author" />
}

